{
  "name": "pg-history-db",
  "version": "0.1.0",
  "description": "Append-only database driver for PostgreSQL",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/triptease/pg-history-db"
  },
  "scripts": {
    "start": "microbundle --watch",
    "test": "node-pg-migrate up && jest",
    "build": "rm -rf dist && NODE_ENV=production microbundle",
    "release": "yarn build && standard-version"
  },
  "dependencies": {
    "pg": "^7.6.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.9",
    "@types/pg": "^7.4.11",
    "@types/uuid": "^3.4.4",
    "dotenv": "^6.1.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "microbundle": "^0.7.0",
    "node-pg-migrate": "^3.14.0",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "Triptease",
  "license": "MIT",
  "keywords": [
    "postgres",
    "postgresql"
  ],
  "private": false,
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "\\.tests?\\.(ts|tsx)$",
    "clearMocks": true
  }
}
